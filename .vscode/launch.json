{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Program",
      "program": "${workspaceFolder}/dist/index.js",
      "runtimeArgs": [
        "--inspect=9229"
      ],
      "outFiles": [
        "${workspaceFolder}/dist/**/*.js"
      ],
      "serverReadyAction": {
        "pattern": "listening on port 3000",
        "uriFormat": "http://localhost:3000",
        "action": "openExternally"
      }
    }
  ]
}